#Take digest from application request
openssl dgst -sha1 ApplicationRequest_GetUserInfo_canon.xml

#Sign application request digest
openssl dgst -sha1 -sign private1.pem -out application_request_signature ApplicationRequest_GetUserInfo_canon.xml

#Base64 code application request signature
openssl enc -base64 -in application_request_signature -out application_request_signature_base64

#Base64 code application_request
openssl enc -base64 -in ApplicationRequest_GetUserInfo_canon.xml -out ApplicationRequest_GetUserInfo_canon_base64.xml

#Take digest from soap message
openssl dgst -sha1 soapbody.xml

#Sign soap message digest
openssl dgst -sha1 -sign private1.pem -out soap_request_signature soapbody.xml

#Base64 code soap message signature
openssl enc -base64 -in soap_request_signature -out soap_request_signature_base64

#Canocilation soap message
xmlstarlet c14n SOAPrequest_GetUserInfo.xml > SOAPrequest_GetUserInfo_canon.xml

#Canocilaize application request
xmlstarlet c14n ApplicationRequest_GetUserInfo.xml > ApplicationRequest_GetUserInfo_canon.xml
